<%= form_with(model: template) do |form| %>
  <% if template.errors.any? %>
    <div class="error-box">
      <h2>エラーが発生しました (<%= pluralize(template.errors.count, "error") %>):</h2>
      <ul>
        <% template.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "テンプレート名", class: "form-label" %>
    <%= form.text_field :name, class: "form-input", placeholder: "テンプレートの名前を入力してください" %>
  </div>

  <div class="form-group">
    <%= form.label :basename, "ベース名", class: "form-label" %>
    <%= form.text_field :basename, class: "form-input", placeholder: "ファイルのベース名を入力してください" %>
  </div>

  <div class="form-group">
    <%= form.label :filetype, "ファイルタイプ", class: "form-label" %>
    <%= form.text_field :filetype, class: "form-input", placeholder: "ファイルタイプを入力してください" %>
  </div>

  <div class="form-group">
    <%= form.label :content, "Content", class: "form-label" %>
    <%= form.text_area :content, rows: 16, class: "code-editor" %>
  </div>

  <div class="form-actions">
    <%= form.submit template.persisted? ? "Update Template" : "Create Template", class: "button large success" %>
    <%= link_to "戻る", templates_path, class: "button secondary" %>
  </div>
<% end %>
