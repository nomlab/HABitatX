<p style="color: green"><%= notice %></p>

<h1>Items</h1>

<div>
  <%= link_to "Items_group", items_groups_path %>
</div>

<div>
<%= link_to "New item", new_item_path, class: "button" %>
</div>

<div id="items">
  <% @items.each do |item| %>
    <div class="container">
      <p>
        <strong><%= item.name %></strong>
      </p>
      <p>
        <strong>dsl_info</strong>
      </p>
      <% dsl_info_hash = JSON.parse(item.dsl_info) %>
      <table border="1">
        <tr>
          <% dsl_info_hash.keys.each do |key| %>
            <th><%= key %></th>
          <% end %>
        </tr>
        <tr>
          <% dsl_info_hash.each_value do |value| %>
            <td><%= value %></td>
          <% end %>
        </tr>
      </table>
      <p>
        <%= link_to "Show", item, class: "button" %>
      </p>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "back", root_path, class: "button" %>
</div>
